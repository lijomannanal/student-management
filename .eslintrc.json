{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": ["standard-with-typescript", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": ["./tsconfig.json"]
    },
    "plugins": ["prettier"],
    "rules": {
        "semi": ["error", "always", { "omitLastInOneLineBlock": false}]
    }
}
